[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/hajela_ias_academy
ExecStart=/home/ubuntu/hajela_ias_academy/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          hajela_ias_academy.wsgi:application
[Install]
WantedBy=multi-user.target